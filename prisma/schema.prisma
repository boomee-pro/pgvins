generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    email    String @unique
    password String
    surname  String
    forename String
}

model Wine {
    id     String @id @default(auto()) @map("_id") @db.ObjectId
    name   String @unique
    origin String
    price  Float
}
